<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Servlets.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>Servlets.signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>enduserc_customer</servlet-name>
        <servlet-class>Servlets.enduserc_customer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>customer_view</servlet-name>
        <servlet-class>Servlets.customer_view</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>my_account_view</servlet-name>
        <servlet-class>Servlets.my_account_view</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>enduserc_customer</servlet-name>
        <url-pattern>/enduserc_customer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>customer_view</servlet-name>
        <url-pattern>/customer_view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>my_account_view</servlet-name>
        <url-pattern>/my_account_view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
